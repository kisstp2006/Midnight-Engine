/***  Decorators  ***/
#decorators {
	text-align: left;
}
#decorators p
{
	margin: 0.5em 0;
}
#decorators button.gradient
{
	decorator: vertical-gradient( #415857 #5990A3 );
	border: 3dp #415857;
	border-radius: 8dp;
	margin-right: 12dp;
}
#decorators button.gradient.horizontal
{
	decorator: horizontal-gradient( #DB6565 #F1B58A );
	border-color: #DB6565;
}
#decorators button.gradient:hover
{
	border-color: #F9EFA3;
}

#decorators .image-alien
{
	width: 64dp;
	height: 64dp;
	decorator: image( /Data/high_scores_alien_1.png );
}
#decorators .image-invader
{
	width: 51dp;
	height: 39dp;
	decorator: image( icon-invader );
}
.side-by-side
{
	display: inline-block;
	width: 120dp;
	vertical-align: middle;
	text-align: center;
}
.tiled-box
{
	height: 200dp;
	decorator: tiled-box(
		window-tl, window-t, window-tr,
		window-l, window-c, window-r,
		window-bl, window-b, window-br
	);
}
.image-mode
{
	text-align: center;
	margin-top: 30dp;
}
.image-mode > div
{
	display: inline-block;
	width: 120dp;
	height: 50dp;
	padding: 5dp 10dp;
	margin: 10dp 10dp;
	background-color: #c662;
	border: 1dp #777;
	font-effect: shadow( 1dp 1dp #333 );
}
.image-mode.repeat > div {
	height: 120dp;
}
#decorators .image-mode > div > p
{
	margin: -2em 0 0 0;
	text-align: center;
}
.image-mode.small { margin-top: -15dp; }
.image-mode.small > div
{
	width: 40dp;
	height: 20dp;
	padding: 0;
	margin-left: 60dp;
	margin-right: 60dp;
}
